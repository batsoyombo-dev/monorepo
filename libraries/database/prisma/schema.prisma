model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  email String @unique
  name String?
  role Role @default(USER)

  @@map("users")
}

model Test {
  id Int @id @default(autoincrement())
  name String

  @@map("tests")
}

enum Role {
